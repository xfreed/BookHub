@model BookHub.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-clean">
    @using (Html.BeginForm("Login", "Account"))
    {
        <form method="post">
            <div style="color:red;">@Html.ValidationSummary()</div>
            <div class="col-lg-12">@ViewBag.Message</div>
            <div class="illustration"><img src="~/Content/Images/logo.png" style="width: 80px;" /></div>
            <div class="form-group">@Html.TextBoxFor(a => a.Email, new { @class = "form-control", type = "email", placeholder = "Почта" })</div>
            <div class="form-group">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "password", placeholder = "Пароль" })</div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Вхід</button></div>
            <a class="forgot" href="#">Забули пароль?</a><br /><br>
            <span>Перший раз тут? <a class="forgot" href="@Url.Action("Register", "Account")">Реєстрація</a></span>
        </form>
    }
</div>